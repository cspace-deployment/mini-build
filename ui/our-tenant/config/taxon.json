{
    "pageBuilder": {
        "options": {
            "pageType": "taxon",
            "selectors": {
                "recordEditor": ".csc-taxonAuthority-template"
            },
            "components": {
                "recordEditor": {
                    "type":  "cspace.recordEditor",
                    "options": {
                        "selectors": {
                            "hierarchy": ".csc-hierarchy",
                            "identificationNumber": ".csc-taxon-displayName"
                        },
                        "selectorsToIgnore": ["requiredFields", "identificationNumber", "header", "togglable", "hierarchy"],
                        "deferredComponents": {
                            "hierarchy": {
                                "type": "cspace.hierarchy",
                                "options": {
                                    "uispec": "{pageBuilder}.options.uispec.hierarchy"
                                }
                            }
                        },
                        "strings": {
                            "identificationNumberRequired": "Please specify a Display Name"
                        },
                        "applier": "{pageBuilder}.applier",
                        "uispec": "{pageBuilder}.options.uispec.recordEditor",
                        "model": "{pageBuilder}.model"
                    }
                },
                "titleBar": {
                    "type": "cspace.titleBar",
                    "options": {
                        "fields": [
                            "fields.displayName"
                        ]
                    }
                },
                "header": {
                    "type": "cspace.header",
                    "options": {
                        "schema": "{pageBuilder}.schema",
                        "permissions": "{pageBuilder}.permissions"
                    }
                },
                "tabs": {
                    "type": "cspace.tabs"
                },
                "sidebar": {
                    "type": "cspace.sidebar"
                }
            }
        }
    },
    "pageBuilderIO": {
        "options": {
            "recordType": "taxon",
            "namespace": "taxon",
            "schema": [
                "recordlist",
                "recordtypes",
                "namespaces",
                "taxon"
            ],
            "pageSpec": {
                "recordEditor": {
                    "href": "%readonlypages/TaxonTemplate.html",
                    "templateSelector": ".csc-taxonAuthority-template",
                    "targetSelector": ".csc-record-edit-container"
                }
            },
            "components": {
                "dataContext": {
                    "options": {
                        "baseUrl": "../../../chain/vocabularies"
                    }
                }
            }
        }
    }
}