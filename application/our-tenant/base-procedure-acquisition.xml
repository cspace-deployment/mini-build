            <title-selector>titleBar-acquisition-reference-number</title-selector>
            <container-selector>acquisition-reference-number-patternChooserContainer</container-selector>
            <options>
                <option id="accession" sample="2011.1">Accession</option>
                <option id="archive" sample="AR2011.42">Archives</option>
                <option id="library" sample="LIB2011.1">Library</option>
            </options>
        </field>
        <field id="accessionDate" ui-search="range" ui-type="date">
