<root>
	<services-record-path id="botgarden">media_botgarden:http://collectionspace.org/services/media/local/botgarden,media_botgarden</services-record-path>

	<section id="mediaInformationExtensions">
		<field id="handwritten" section="botgarden">
			<options>
				<option id="" default="yes">Please select a value</option>
				<option id="yes">Yes</option>
				<option id="no">No</option>
				<option id="unknown">Unknown</option>
			</options>
		</field>
		<field id="postToPublic" section="botgarden">
			<options>
				<option id="no" default="yes">No</option>
				<option id="yes">Yes</option>
			</options>
		</field>
		<field id="scientificTaxonomy" in-title="yes" mini="summary" section="botgarden" autocomplete="taxon-taxon">
			<title-selector>titleBar-media-scientificTaxonomy</title-selector>
		</field>
	</section>
</root>