
            <!-- XXX uispec Urls have been edited/fixed to match those been generated by this xml for the time being -->
            <record id="person" type="authority,compute-displayname"> <!-- Default Person Authority -->
                <terms-used>false</terms-used>
                <!-- XXX servcie layer doesn't currently support person terms but it does on  organisations - go figure -->
                <web-url>person</web-url>
                <services-tenant-auth-singular>Personauthority</services-tenant-auth-singular>
                <services-tenant-auth-plural>Personauthorities</services-tenant-auth-plural>
                <services-tenant-singular>PersonTenant15</services-tenant-singular>
                <services-instances-path>personauthorities_common:http://collectionspace.org/services/person,abstract-common-list/list-item</services-instances-path>
                <services-single-instance-path>personauthorities_common:http://collectionspace.org/services/person,personauthorities_common</services-single-instance-path>
                <services-list-path>http://collectionspace.org/services/person,abstract-common-list/list-item</services-list-path>
                <services-record-path>persons_common:http://collectionspace.org/services/person,persons_common</services-record-path>
                <services-record-path id="collectionspace_core">collectionspace_core:http://collectionspace.org/collectionspace_core/,collectionspace_core</services-record-path>
                <services-url>personauthorities</services-url>
                <authority-vocab-type>PersonAuthority</authority-vocab-type>
                <hassoftdelete>true</hassoftdelete>
                <structures>
                    <structure id="search">
                        <view>
                            <label-section id="messagekeys" show="true"></label-section>
                        </view>
                    </structure>
                    <structure id="screen">
                        <view>
                            <label-section id="messagekeys" show="true"></label-section>
                            <hierarchy-section show="true">
                        		<options>
                            		<option id="narrowerContext">person-person</option>
                            		<option id="broaderContext">person-person</option>
								</options>
							</hierarchy-section>
                        </view>
                    </structure>
                </structures>

				<include src="domain-authority-person.xml" strip-root="yes" /> 

                <instances>
                    <instance id="person-person">
                        <web-url>person</web-url>
                        <title-ref>person</title-ref>
                        <title>Default Person Authority</title>
                    </instance>
                    <instance id="person-persontest1">
                        <web-url>persontest1</web-url>
                        <title-ref>persontest1</title-ref>
                        <title>Test Person Authority 1</title>
                    </instance>
                    <instance id="person-persontest2">
                        <web-url>persontest2</web-url>
                        <title-ref>persontest2</title-ref>
                        <title>Test Person Authority 2</title>
                    </instance>
                </instances>

                <section>
                    <field id="tenantID" section="collectionspace_core" attributes="GET"></field>
			        <field id="createdBy" section="collectionspace_core" attributes="GET"></field>
			        <field id="updatedBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
                    <field id="createdAt" section="collectionspace_core" attributes="GET"></field>
                    <field id="updatedAt" ui-search="range" ui-type="date" section="collectionspace_core" attributes="GET" mini="search,list,relate"></field>
                </section>
                <section id="personNameAuthorityInformation">
                    <field id="displayName" ui-search="repeatable" in-title="yes" display-name="yes" mini="summary,number,search,list,relate">
                        <selector>personAuthority-displayName</selector>
                        <title-selector>titleBar-displayName</title-selector>
                    </field>
                    <field id="termStatus" ui-search="repeatable" seperate_ui_container="true">
                        <selector>personAuthority-status</selector>
                        <options>
                            <option id="provisional" default="yes">provisional</option>
                            <option id="underReview">under review</option>
                        	<option id="possibleDuplicate">possible duplicate</option>
                        	<option id="duplicateRemove">duplicate entry—remove</option>
                            <option id="accepted">accepted</option>
                            <option id="rejected">rejected</option>
                        </options>
                    </field>
                    <field id="salutation">
                        <selector>personAuthority-salutation</selector>
                        <options>
                            <option id="dear" default="yes">Dear</option>
                            <option id="hello">Hello</option>
                            <option id="to">To</option>
                        </options>
                    </field>
                    <field id="title">
                        <selector>personAuthority-title</selector>
                        <options>
                            <option id="" default="yes">(none selected)</option>
                            <option id="Acting Chairperson">Acting Chairperson</option>
                            <option id="Admiral">Admiral</option>
                            <option id="Baron">Baron</option>
                            <option id="Brigadier General">Brigadier General</option>
                            <option id="Brother">Brother</option>
                            <option id="Canon">Canon</option>
                            <option id="Captain">Captain</option>
                            <option id="Chaiperson">Chaiperson</option>
                            <option id="Chairman">Chairman</option>
                            <option id="Chairperson">Chairperson</option>
                            <option id="Chancellor">Chancellor</option>
                            <option id="Chief">Chief</option>
                            <option id="Colonel">Colonel</option>
                            <option id="Commodore">Commodore</option>
                            <option id="Corporal">Corporal</option>
                            <option id="Count">Count</option>
                            <option id="Czar">Czar</option>
                            <option id="Dean">Dean</option>
                            <option id="Dr.">Dr.</option>
                            <option id="Father">Father</option>
                            <option id="General">General</option>
                            <option id="Governor">Governor</option>
                            <option id="Great-grandmother">Great-grandmother</option>
                            <option id="Hon.">Hon.</option>
                            <option id="Judge">Judge</option>
                            <option id="Khan">Khan</option>
                            <option id="King">King</option>
                            <option id="Lady">Lady</option>
                            <option id="Lieutenant">Lieutenant</option>
                            <option id="Lieutenant Colonel">Lieutenant Colonel</option>
                            <option id="Lieutenant Commander">Lieutenant Commander</option>
                            <option id="Major">Major</option>
                            <option id="Mayor">Mayor</option>
                            <option id="Miss">Miss</option>
                            <option id="Mlle.">Mlle.</option>
                            <option id="Monsieur">Monsieur</option>
                            <option id="Mr.">Mr.</option>
                            <option id="Mr. and Mrs.">Mr. and Mrs.</option>
                            <option id="Mrs.">Mrs.</option>
                            <option id="Ms.">Ms.</option>
                            <option id="Pastor">Pastor</option>
                            <option id="Pfc.">Pfc.</option>
                            <option id="President">President</option>
                            <option id="Prince">Prince</option>
                            <option id="Prof.">Prof.</option>
                            <option id="Ranger">Ranger</option>
                            <option id="Reverend">Reverend</option>
                            <option id="Senor">Señor</option>
                            <option id="Sheriff">Sheriff</option>
                            <option id="Sir">Sir</option>
                            <option id="Sister">Sister</option>
                            <option id="Technical Sergeant">Technical Sergeant</option>
                            <option id="Vice Chancellor">Vice Chancellor</option>
                        </options>
                    </field>
                    <field id="foreName" mini="list,search,relate,terms">
                        <selector>personAuthority-foreName</selector>
                    </field>
                    <field id="middleName">
                        <selector>personAuthority-middleName</selector>
                    </field>
                    <field id="surName" mini="list,search,relate,terms">
                        <selector>personAuthority-surName</selector>
                    </field>
                    <field id="nameAdditions">
                        <selector>personAuthority-nameAdditions</selector>
                    </field>
                    <field id="initials">
                        <selector>personAuthority-initials</selector>
                    </field>
                    <field id="gender" ui-search="repeatable" seperate_ui_container="true">
                        <selector>personAuthority-gender</selector>
                        <options>
                            <option id="" default="yes">(none selected)</option>
                            <option id="male">male</option>
                            <option id="female">female</option>
                            <option id="transgender">transgender</option>
                            <option id="unknown">unknown</option>
                        </options>
                    </field>
                    <repeat id="occupations">
                        <selector>personAuthority-occupation</selector>
                        <field id="occupation" ui-search="repeatable">
                            <selector>personAuthority-occupation</selector>
                        </field>
                    </repeat>
                    <repeat id="schoolsOrStyles">
                        <selector>personAuthority-schoolOrStyle</selector>
                        <field id="schoolOrStyle" ui-search="repeatable">
                            <selector>personAuthority-schoolOrStyle</selector>
                        </field>
                    </repeat>
                    <repeat id="groups">
                        <selector>personAuthority-group</selector>
                        <field id="group" ui-search="repeatable">
                            <selector>personAuthority-group</selector>
                        </field>
                    </repeat>
                    <repeat id="nationalities">
                        <selector>personAuthority-nationality</selector>
                        <field id="nationality" ui-search="repeatable">
                            <selector>personAuthority-nationality</selector>
                        </field>
                    </repeat>
                    <field id="nameNote">
                        <selector>personAuthority-nameNote</selector>
                    </field>
                    <field id="birthDate" ui-search="range" in-title="yes" ui-type="date">
                        <selector>personAuthority-birthDate</selector>
                        <title-selector>titleBar-birthDate</title-selector>
                    </field>
                    <!-- ################# FIELD SHOULD BE CONTROLLED BY AUTHORITY (MTB NOTE) ################## -->
                    <field id="birthPlace">
                        <selector>personAuthority-birthPlace</selector>
                    </field>
                    <field id="deathDate" ui-search="range" in-title="yes" ui-type="date">
                        <selector>personAuthority-deathDate</selector>
                        <title-selector>titleBar-deathDate</title-selector>
                    </field>
                    <!-- ################# FIELD SHOULD BE CONTROLLED BY AUTHORITY (MTB NOTE) ################## -->
                    <field id="deathPlace">
                        <selector>personAuthority-deathPlace</selector>
                    </field>
                    <field id="bioNote">
                        <selector>personAuthority-bioNote</selector>
                    </field>
                </section>
                <section id="contactInformation">
                    <group id="contact" userecord="contact" ui-spec-inherit="false"  ui-spec-prefix="contact"  exists-in-services="false"></group>
                </section>
                <!-- not used in UI -->
                <section >
                    <field id="shortIdentifier" mini="search,list,relate" attributes="GET"></field>
                    <field id="csid" mini="search,list,relate" attributes="GET"></field>
                    <field id="refName" mini="search,list,relate" attributes="GET"></field>
                    <field id="uri" mini="search,list,relate" attributes="GET"></field>
                    <field id="name">
                        <selector>personAuthority-name</selector>
                    </field>
                </section>
            </record>
